[core]
	# Windows
#	autocrlf = true
#	whitespace = trailing-space,space-before-tab,indent-with-non-tab,cr-at-eol
	# Linux
	autocrlf = input
	whitespace = trailing-space,space-before-tab,indent-whith-non-tab,cr-at-eol
	longpaths = true
	editor = vim
	quotepath = off
[color "decorate"]
	head = cyan
	tag = yellow
	branch = green
	remotebranch = red
[pull]
	rebase = true
[branch]
	autosetuprebase = always
[push]
	default = current
[commit]
        gpgsign = true
[diff]
	renameLimit = 1000
[merge]
	tool = vimdiff2
	conflictstyle = diff3
[mergetool]
	prompt = false
[alias]
        # basics
        br = branch
        ca = commit --amend
        ci = commit
        cl = clone
        co = checkout
        col = checkout @{-1}
        cp = cherry-pick
        st = status -s
        stv = status

        # reset
        r = reset
        rh = reset --hard
        rhu = reset --hard @{u}

        # logs
        fl = log -u
        l = log -1 HEAD
        ll = log --pretty=format:'%C(auto)%h %C(magenta)%ad %C(blue)[%an] %C(auto)%d %C(reset)%s' --all --graph --date=format:'%Y-%m-%d %H:%M'

        # diffs
        dc = diff --cached
        diff = diff --word-diff
        dlc = diff --cached HEAD^

        # fancy stuff
        all = "!f() { ls | xargs -I{} git -C {} $1; }; f"
        dependency-check = !~/dependency-check/bin/dependency-check.sh -s ./
        develop = checkout develop
        dummy = commit -m 'This is a blank commit' --allow-empty
        fetchall = fetch --all
        ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
        lasttag = describe --tags --abbrev=0
        listalias = "!git config -l | grep alias | cut -c 7-"
        main = checkout main
        new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
        outahere = "!echo 'exit does not work :('"
        revd = review -d
        rmbs = "!git branch | grep -v "main" | grep -v "master" | xargs git branch -D"
[credential]
	helper = store
[gitflow "prefix"]
	hotfix = hotfix/
	feature = feature/
	bugfix = bugfix/
	release = release/
	support = support/
