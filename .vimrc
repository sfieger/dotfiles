syntax on

set hidden
set wildmenu
set showmode
set showcmd

set ignorecase
set smartcase

set backspace=indent,eol,start

set autoindent

set ruler
set laststatus=2

set confirm

set cmdheight=2

set number

set shiftwidth=4
set softtabstop=4
set expandtab

set list
set listchars=space:.,tab:»\ ,eol:¬

set background=dark
let g:solarized_visibility="normal"
colorscheme solarized
